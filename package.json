{
  "name": "mprove-api",
  "version": "0.0.0",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove-api.git"
  },
  "scripts": {
    "rimraf": "rimraf",
    "clean:dist": "npm run rimraf -- dist .awcache",
    "build": "npm run clean:dist && npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tslint --project tsconfig.json --config tslint.json -e 'node_modules/**' 'src/**/*.ts'",
    "format": "tsfmt -r --no-tslint --no-editorconfig --no-vscode --useTsconfig=./tsconfig.formatter.json"
  },
  "dependencies": {
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "typescript-formatter": "^7.0.0"
  }
}
