{
  "name": "mprove-node",
  "version": "0.0.0",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove-node.git"
  },
  "scripts": {
    "rimraf": "rimraf",
    "clean": "npm run rimraf -- dist ormlogs.log .awcache",
    "lint": "tslint --config tslint.json -e 'node_modules/**' \"{src,test}/**/*.ts\"",
    "circular": "madge --circular --extensions ts ./",
    "format:base": "prettier \"{src,test}/**/*.{ts,js,json}\" --config .prettierrc.yaml",
    "format:list": "npm run format:base -- --list-different --config .prettierrc.yaml",
    "format:write": "npm run format:base -- --write",
    "files:check": "npm run format:write && npm-run-all --parallel lint circular", 
    "build": "npm run files:check && npm run clean && tsc",
    "start": "npm run build && npm run watch",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-ts": "tsc -w",
    "jest": "JEST=yes jest",
    "test": "JEST=yes jest --forceExit"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^1.3.0",
    "@octokit/rest": "^15.11.2",
    "@types/express-jwt": "^0.0.40",
    "async": "^2.6.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "clone-regexp": "^2.1.0",
    "compression": "^1.7.1",
    "cron": "^1.4.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "express-ws": "^4.0.0",
    "fs-extra": "^7.0.0",
    "jwks-rsa": "^1.3.0",
    "lusca": "^1.5.2",
    "morgan": "^1.7.0",
    "mysql": "^2.16.0",
    "nanoid": "^1.3.0",
    "nodegit": "^0.22.2",
    "p-iteration": "^1.1.7",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "typeorm": "^0.2.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bluebird": "^3.5.20",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/express-ws": "^3.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^22.1.3",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/nodegit": "^0.22.3",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.4",
    "concurrently": "^3.5.1",
    "jest": "23.2.0",
    "nodemon": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "23.0.1",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "prettier": "^1.15.2",
    "tslint-config-prettier": "^1.16.0",
    "npm-run-all": "~4.1.3"
  }
}
