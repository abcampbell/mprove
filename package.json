{
  "name": "mprove-web-app",
  "version": "1.0.0",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove-web-app.git"
  },
  "scripts": {
    "clean": "rimraf ./dist/",
    "lint": "tslint --config tslint.json -e 'node_modules/**' \"{src,test}/**/*.ts\"",
    "circular": "madge --circular --extensions ts ./",
    "format:base": "prettier \"{src,e2e}/**/*.{ts,js,json,scss,html}\" --config .prettierrc.yaml",
    "format:list": "npm run format:base -- --list-different --config .prettierrc.yaml",
    "format:write": "npm run format:base -- --write",
    "files:check": "npm run format:write && npm-run-all --parallel lint circular",
    "build:local": "npm run files:check && npm run clean && ng build --configuration=local",
    "build:test": "npm run files:check && npm run clean && ng build --configuration=test",
    "build:prod": "npm run files:check && npm run clean && ng build --prod --vendor-chunk",
    "server": "node ./server.js",
    "ng": "ng",
    "start": "ng serve",
    "start:open": "ng serve --open",
    "build": "npm run clean && ng build",
    "docker-start": "ng serve  --host 0.0.0.0",
    "test": "npm run lint && ng test --configuration=test",
    "e2e": "ng e2e",
    "watch": "ng test --configuration=test --browsers ChromeHeadless --watch",
    "prod": "npm run clean && npm run build:prod && npm run server",
    "ci": "npm run clean && npm run format:list && ng lint && ng test --configuration=test --browsers ChromeTravisCi --code-coverage && ng e2e && npm run cy:ci && npm run accessibility && npm run build:prod -- --deploy-url /web-app/ --base-href /web-app",
    "release": "standard-version && git push --follow-tags origin master",
    "analyze": "npm run clean && npm run build:prod -- --stats-json && webpack-bundle-analyzer ./dist/stats.json",
    "precy:ci": "npm run build:prod -- --deploy-url \"/web-app/\" --base-href \"/web-app\"",
    "preaccessibility": "npm run build:prod -- --deploy-url \"/web-app/\" --base-href \"/web-app\"",
    "accessibility": "npm-run-all --parallel --race server accessibility:run",
    "accessibility:run": "pa11y-ci --threshold 250",
    "compodoc": "compodoc -p src/tsconfig.app.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,e2e}/**/*.{ts,js,json,scss,html}": [
      "prettier --write --config .prettierrc.yaml",
      "git add"
    ]
  }, 
