{
  "name": "mprove-api",
  "version": "0.0.0",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove-api.git"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json -e 'node_modules/**' 'src/**/*.ts'",
    "circular": "madge --circular --extensions ts ./",
    "format:base": "prettier \"src/**/*.ts\" --config .prettierrc.yaml",
    "format:list": "npm run format:base -- --list-different",
    "format:write": "npm run format:base -- --write",
    "files:check": "npm run format:write && npm-run-all --parallel lint circular"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "tslint": "~5.10.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "~2.7.2"
  }
}
