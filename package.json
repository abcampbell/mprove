{
  "name": "mprove-api",
  "version": "0.0.0",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove-api.git"
  },
  "scripts": {
    "rimraf": "rimraf",
    "clean:dist": "npm run rimraf -- dist .awcache",
    "build": "npm run clean:dist && npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tslint --project tsconfig.json --config tslint.json -e 'node_modules/**' 'src/**/*.ts'",
    "format:base": "prettier \"src/**/*.{ts}\" --config .prettierrc.yaml",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write"
  },
  "devDependencies": {
    "codelyzer": "~4.3.0",
    "typescript": "~2.7.2",
    "tslint": "~5.10.0",
    "tslint-config-prettier": "^1.16.0",
    "prettier": "^1.15.2",
    "rimraf": "~2.6.2"
  }
}
